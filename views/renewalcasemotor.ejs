<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Renewal Case Motor Form</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 20px;
        }
        .form-container {
            border: 1px solid #ccc;
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            margin: auto;
        }
        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }
        .form-row {
            display: flex;
            flex-wrap: wrap;
            margin-bottom: 15px;
        }
        .form-row div {
            flex: 1;
            padding: 10px;
        }
        .form-row label {
            margin-bottom: 8px;
        }
        .form-row input,
        .form-row select,
        .form-row textarea {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            font-size: 14px;
        }
        button {
            background-color: #0261A8;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            padding: 10px 20px;
            font-size: 14px;
            margin-right: 10px;
        }
        button:hover {
            background-color: #024B8A;
        }
        .error-message {
            color: red;
            font-size: 12px;
            margin-top: 5px;
        }
        @media (max-width: 768px) {
            .form-row {
                flex-direction: column;
            }
            .form-row div {
                padding: 0;
                margin-bottom: 10px;
            }
            .form-row div:last-child {
                margin-bottom: 0;
            }
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Renewal Case Motor Form</h2>
        <form id="renewalCaseMotorForm" action="/submit-renewal-case" method="post" enctype="multipart/form-data" onsubmit="return validateForm()">
            <div class="form-row">
                <div>
                    <label for="customerName">Customer Name:</label>
                    <input type="text" id="customerName" name="customerName" required>
                    <span id="customerNameError" class="error-message"></span>
                </div>
                <div>
                    <label for="policyNumber">Policy Number:</label>
                    <input type="text" id="policyNumber" name="policyNumber" required>
                    <span id="policyNumberError" class="error-message"></span>
                </div>
                <div>
                    <label for="addOns">Add Ons:</label>
                    <select id="addOns" name="addOns" required>
                        <option value="addon1">Add On 1</option>
                        <option value="addon2">Add On 2</option>
                        <option value="addon3">Add On 3</option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div>
                    <label for="remarks">Remarks:</label>
                    <textarea id="remarks" name="remarks" rows="1" required></textarea>
                </div>
            </div>
            <div class="form-row" style="justify-content: center;">
                <button type="submit">Submit</button>
            </div>
        </form>
    </div>

    <script>
        function validateForm() {
            let isValid = true;

            if (document.getElementById('customerName').value === "") {
                document.getElementById('customerNameError').textContent = "Please enter Customer Name";
                isValid = false;
            } else {
                document.getElementById('customerNameError').textContent = "";
            }

            if (document.getElementById('policyNumber').value === "") {
                document.getElementById('policyNumberError').textContent = "Please enter Policy Number";
                isValid = false;
            } else {
                document.getElementById('policyNumberError').textContent = "";
            }

            return isValid;
        }
    </script>
</body>
</html>
